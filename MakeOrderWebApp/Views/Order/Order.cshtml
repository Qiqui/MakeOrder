@model OrderVM

<input type="hidden" asp-for="Id" value="" />
<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="@Model.Number" class="form-label">Номер заказа: @Model.Number</label>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.SenderCity" class="form-label">Город отправителя: @Model.SenderCity</label>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.SenderAdress" class="form-label">Адрес отправителя: @Model.SenderAdress</label>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RecipientCity" class="form-label">Город получателя: @Model.RecipientCity</label>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RecipientAdress" class="form-label">Адрес получателя: @Model.RecipientAdress</label>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CargoWeigth" class="form-label">Вес груза: @Model.CargoWeigth</label>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Date" class="form-label">Дата забора груза: @Model.Date.ToString("dd/MM/yyyy HH:mm")</label>
            </div>
        </div>
    </div>
</div>