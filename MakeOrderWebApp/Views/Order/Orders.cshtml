@model List<OrderVM>

<h1 class="text-center">Список заказов</h1>
@if (Model != null && Model.Count > 0)
{
    <div class="row-cols-7">
        <table class="table table-dark table-striped">
            <tr>
                <th>Номер заказа</th>
                <th>Город отправки</th>
                <th>Город получения</th>
                <th></th>
            </tr>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>
                        @order.Number
                        </td>
                        <td>
                        @order.SenderCity
                        </td>
                        <td>
                        @order.RecipientCity
                        </td>
                        <td>
                            <a asp-area="" asp-controller="Order" asp-action="Order" asp-route-id="@order.Id">Просмотр</a>
                        </td>
                    </tr>
            }
        </table>
    </div>
}